{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["dom", "esnext.asynciterable", "es2017", "es2016", "es2015"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": { "*": ["src/*", "*"], "automerge": ["./node_modules/automerge/src/automerge"] },
    "rootDir": "",
    "target": "es2016",
    "typeRoots": ["./@types", "./node_modules/@types", "./node_modules/automerge/@types"]
  },
  "exclude": ["dist/**/*"]
}
